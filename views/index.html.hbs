        <script type="text/javascript" src="/socket.io/socket.io.js"></script>
        <script src="http://code.highcharts.com/highcharts.js"></script>
        <script>
            var socket = io.connect('http://localhost:3000'),
                charts = {},
                subtitleString, timeRange, brandText,
                datapoints,
                series = [],
                thisPeriod = [],
                previousPeriod = [],
                i,
                noIntervalText = ['CeleryQueue',
                    'MetadataQueue',
                    'PhantomQueue'];

            String.prototype.toCamel = function(){
                return this.replace(/(\-[a-z])/g, function($1){return $1.toUpperCase().replace('-','');});
            };

            socket.on('newCloudWatchData', function(newData){
                $("#pageName").text(brandText);
                newData.forEach(function(metric){
                    series = [];
                    thisPeriod = [];
                    previousPeriod = [];
                    subtitleString = metric.metricType+
                    ', past '+$("#timeRange").val();

                    if (noIntervalText.indexOf(metric.metricName) === -1){
                        subtitleString = subtitleString + ' ('+metric.interval+'m interval)';
                    }

                    if ($("#compareToPrevious").prop('checked')){



                        for (i = 0; i < metric.datapoints.length/2 - 1; i++){
                            previousPeriod.push([new Date(metric.datapoints[i + metric.datapoints.length/2].timestamp).getTime(), parseFloat(metric.datapoints[i].value, 10)]);
                        }

                        metric.datapoints.slice(metric.datapoints.length/2, metric.datapoints.length).forEach(function(pnt){
                            thisPeriod.push([new Date(pnt.timestamp).getTime(), parseFloat(pnt.value, 10)])
                        });

                        series.push({
                            'name': 'Current Period',
                            'data': thisPeriod
                        });
                        series.push({
                            'name': 'Previous Period',
                            'data': previousPeriod
                        });
                    }
                    else {
                        metric.datapoints.forEach(function(pnt){
                            thisPeriod.push([new Date(pnt.timestamp).getTime(), parseFloat(pnt.value, 10)])
                        });
                        series.push({
                            'name': 'Current Period',
                            'data': thisPeriod
                        });
                    }

                    charts[metric.metricName] = new Highcharts.Chart({
                        chart: {
                            renderTo: metric.metricName,
                            type: 'spline',
                            inverted: false,
                            width: 500,
                            style: {
                            }
                        },
                        title: {
                            text: metric.namespace+' '+metric.metricName
                        },
                        subtitle: {
                            text: subtitleString
                        },
                        xAxis: {
                            type: 'datetime',
                            title: {
                                enabled: true,
                                text: 'Time'
                            }
                        },
                        yAxis: {
                            title: {
                                text: metric.metricName
                            },
                            labels: {
                                formatter: function() {
                                    return this.value + metric.unitLabel;
                                }
                            },
                            min: metric.range[0],
                            max: metric.range[1]
                        },
                        legend: {
                            enabled: false
                        },
                        series: series
                    });
                });
            });

            socket.on('newBasicStatsData', function(newData){
                insertBasicStatsData(newData);
            });

            $(document).ready(function(){

                brandText = $(".brand").text();
                $("#timeRange").change(function(){
                    requestData('{{view}}');
                    $("#currentTimeRange").text($("#timeRange").val());
                })
                $("#compareToPrevious").change(function(){
                    requestData('{{view}}');
                })
                requestData('{{view}}');
                setInterval(function(){
                    requestData('{{view}}');
                }, 60000);
            })

            function requestData(view) {
                compareToPrevious = ($("#compareToPrevious").checked === true) ? true : false;
                timeRange = $("#timeRange").val();
                socket.emit('requestData', {
                    'timeRange': timeRange,
                    'view': view,
                    'compareToPrevious': compareToPrevious
                });
                $("#pageName").text('loading...');
            }

            function insertBasicStatsData(data) {
                Object.keys(data).map(function(key){
                    var keyName = formatStatName(key);
                    if (!$('#' + keyName).length){
                        $("#basic_stats").append("<div id='"+keyName+"''><h3>" + key + "</h3></div>");
                    }
                    Object.keys(data[key]).map(function(stat){
                        var statName = formatStatName(key+stat);
                        if (!$('#' + statName).length){
                            $('#' + keyName).append("<div id='"+statName+"'' class='stat'>" + stat + ": <span id='" + statName + "Value'></span></div>");
                        }
                        $('#' + statName + 'Value').text(data[key][stat]);
                    })
                });
            }

            function formatStatName(name) {
                name = name.replace(/\s/g, "");
                return name.charAt(0).toLowerCase() + name.slice(1);
            }

        </script>
